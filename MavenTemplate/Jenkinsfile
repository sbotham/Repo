pipeline {
    agent any
  tools {
        maven 'Maven 3.5.2'
        jdk 'Java 8u152'
    }
    
 

    stages {
        stage('Init') {
           steps {
           
           
                    script {
                       jobName="MavenTemplate"
                    }
              
              echo "jobName=${jobName}"
           }
        }
        
        
        stage('Build') {
            steps {
                echo 'Building..1'
                echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
                sh 'mvn -f MavenTemplate/ clean'
            }
        }
        
        stage('Test') {
            steps {
                echo 'Testing..1'
                sh 'mvn -f MavenTemplate/ -Dmaven.test.failure.ignore=true test'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying....1'
            }
        }
        
    }
    
        post {
        always {
            echo "Post-always"
        }
        success {
            echo "Post-success"
        }
        failure {
            echo "Post-failure"
        }
    }
    
    
    
}
